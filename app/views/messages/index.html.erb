<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info mr2"><%= message.name %></span>
        <span class="label label-success"><%= message.age %>歳</span>
        <%= message.body %>
        <span class="label label-primary mr2"><%= link_to "edit" , edit_message_path(message) %></span>
        <span class="label label-danger"><%= link_to "destroy" , message , method: :delete, data:{confirm: '削除してもよろしいですか？'} %></span>
        <br>
        <% end %>
    </div>
</div>

<%= render 'form' %>
